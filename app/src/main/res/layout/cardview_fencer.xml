<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    android:background="@color/five01">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/background_border"
        >

        <TextView
            android:id="@+id/tv_c_local_num"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_above="@+id/tv_c_rating"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom|end"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:text="0."
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/tv_c_fencer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_c_local_num"
            android:layout_toRightOf="@+id/tv_c_local_num"
            android:layout_marginLeft="4dp"
            android:text="First LastName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_c_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_marginRight="4dp"
            android:layout_toStartOf="@id/tv_c_fencer_name"
            android:layout_toLeftOf="@id/tv_c_fencer_name"
            android:layout_below="@id/tv_c_fencer_name"
            android:textColor="@color/five01"
            android:textSize="14sp"
            android:text="U"
            />

        <TextView
            android:id="@+id/tv_c_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_c_local_num"
            android:layout_alignStart="@+id/tv_c_fencer_name"
            android:layout_alignLeft="@+id/tv_c_fencer_name"
            android:textColor="@color/five01"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="club name"
            />

        <ImageView
            android:id="@+id/im_c_remove"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_delete_501"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>